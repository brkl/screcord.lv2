@prefix doap: <http://usefulinc.com/ns/doap#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix lv2: <http://lv2plug.in/ns/lv2core#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

<https://github.com/brummer10#me>
	a foaf:Person ;
	foaf:name "hermann" ;
	foaf:mbox <mailto:brummer@web.de> ;
	rdfs:seeAlso <https://github.com/brummer10> .

<https://github.com/brummer10/screcord#mono_record>
    a lv2:Plugin ,
        lv2:UtilityPlugin ;
    doap:maintainer <https://github.com/brummer10#me> ;
    doap:name "MonoRecord";
    doap:license <http://opensource.org/licenses/isc> ;
    lv2:project <https://github.com/brummer10/sc_record> ;
    lv2:optionalFeature lv2:hardRTCapable ;

    lv2:minorVersion 0;
    lv2:microVersion 1;

    lv2:port [
        a lv2:InputPort ,
            lv2:ControlPort ;
        lv2:index 0 ;
        lv2:symbol "FORMAT" ;
        lv2:name "FORMAT";
        lv2:default 0;
        lv2:minimum 0 ;
        lv2:maximum 1 ;
        lv2:portProperty lv2:integer;
        lv2:portProperty lv2:enumeration ;
        lv2:scalePoint [rdfs:label "*.wav"; rdf:value 0];
        lv2:scalePoint [rdfs:label "*.ogg"; rdf:value 1];
    ] , [
        a lv2:InputPort ,
            lv2:ControlPort ;
        lv2:index 1 ;
        lv2:symbol "REC" ;
        lv2:name "REC";
        lv2:portProperty lv2:toggled;
        lv2:portProperty lv2:integer;
        lv2:default 0.0 ;
        lv2:minimum 0.0 ;
        lv2:maximum 1.0 ;
        rdfs:comment "recorded files go to /mount/usb0/lv2record/ or ~/home/lv2record/" , 
        "Aufnahmen gehen nach /mount/usb0/lv2record/  /  ~/home/lv2record/ "@de ,
        "Les fichiers sont enregistrés dans /mount/usb0/lv2record/   /    ~/home/lv2record/ "@fr;
    ] , [
        a lv2:OutputPort ,
            lv2:ControlPort ;
        lv2:index 2 ;
        lv2:symbol "CLIP" ;
        lv2:name "CLIP";
        lv2:portProperty lv2:toggled;
        lv2:portProperty lv2:integer;
        lv2:default 0.0 ;
        lv2:minimum 0.0 ;
        lv2:maximum 1.0 ;
    ] , [
        a lv2:AudioPort ,
            lv2:OutputPort ;
        lv2:index 3 ;
        lv2:symbol "out" ;
        lv2:name "Out"
    ] , [
        a lv2:AudioPort ,
            lv2:InputPort ;
        lv2:index 4 ;
        lv2:symbol "in" ;
        lv2:name "In" ;
    ].

<https://github.com/brummer10/screcord#stereo_record>
    a lv2:Plugin ,
        lv2:UtilityPlugin ;
    doap:maintainer <https://github.com/brummer10#me> ;
    doap:name "StereoRecord";
    doap:license <http://opensource.org/licenses/isc> ;
    lv2:project <https://github.com/brummer10/sc_record> ;
    lv2:optionalFeature lv2:hardRTCapable ;

    lv2:minorVersion 0;
    lv2:microVersion 1;

    lv2:port [
        a lv2:InputPort ,
            lv2:ControlPort ;
        lv2:index 0 ;
        lv2:symbol "FORMAT" ;
        lv2:name "FORMAT";
        lv2:default 0;
        lv2:minimum 0 ;
        lv2:maximum 1 ;
        lv2:portProperty lv2:integer;
        lv2:portProperty lv2:enumeration ;
        lv2:scalePoint [rdfs:label "*.wav"; rdf:value 0];
        lv2:scalePoint [rdfs:label "*.ogg"; rdf:value 1];
    ] , [
        a lv2:InputPort ,
            lv2:ControlPort ;
        lv2:index 1 ;
        lv2:symbol "REC" ;
        lv2:name "REC";
        lv2:portProperty lv2:toggled;
        lv2:portProperty lv2:integer;
        lv2:default 0.0 ;
        lv2:minimum 0.0 ;
        lv2:maximum 1.0 ;
        rdfs:comment "recorded files go to /mount/usb0/lv2record/ or ~/home/lv2record/" , 
        "Aufnahmen gehen nach /mount/usb0/lv2record/  /  ~/home/lv2record/ "@de ,
        "Les fichiers sont enregistrés dans /mount/usb0/lv2record/   /    ~/home/lv2record/ "@fr;
    ] , [
        a lv2:OutputPort ,
            lv2:ControlPort ;
        lv2:index 2 ;
        lv2:symbol "CLIP" ;
        lv2:name "CLIP";
        lv2:portProperty lv2:toggled;
        lv2:portProperty lv2:integer;
        lv2:default 0.0 ;
