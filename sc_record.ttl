        lv2:index 3 ;
        lv2:symbol "out" ;
        lv2:name "Out"
    ] , [
        a lv2:AudioPort ,
            lv2:InputPort ;
        lv2:index 4 ;
        lv2:symbol "in" ;
        lv2:name "In" ;
    ] , [
        a lv2:AudioPort ,
            lv2:OutputPort ;
        lv2:index 5 ;
        lv2:symbol "out1" ;
        lv2:name "Out1"
    ] , [
        a lv2:AudioPort ,
            lv2:InputPort ;
        lv2:index 6 ;
        lv2:symbol "in1" ;
        lv2:name "In1" ;
    ].
